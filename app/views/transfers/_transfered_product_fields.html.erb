<div class="fields">
	<div class="control-group">
       <%= f.label "Producto", :class=>"control-label" %>
        <div class="controls">
          <%= f.select(:product_id, Product.all.collect {|p|[p.name, p.id]}, {:prompt => 'Selecciona un Producto'})%>
        </div>
      </div>
      <div class="control-group">
        <%= f.label 'Cantidad', :class=>"control-label" %>
        <div class="controls">
          <%= f.text_field :quantity, :class=>"input-small" %>
        </div>

      </div>

    <%= link_to_remove_fields "remove", f %>

</div>

