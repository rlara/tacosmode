<form class="well">
<p id="notice"><%= notice %></p>

<p style="font-size:15px">
  <b>Name:</b>
  <%= @product.name %>
</p>

<p style="font-size:15px">
  <b>Sku:</b>
  <%= @product.sku %>
</p>

<p style="font-size:15px">
  <b>Date:</b>
  <%= @product.date %>
</p>

<p style="font-size:15px">
  <b>Type:</b>
  <%= @product.units %>
</p>

<p style="font-size:15px">
  <b>Lote:</b>
  <%= @product.lote %>
</p>


<%= link_to 'Edit', edit_product_path(@product), :class=>"btn btn-primary" %> |
<%= link_to 'Back', products_path, :class=>"btn" %>
</form>
